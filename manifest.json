{
  "manifest_version": 3,
  "name": "BEEF+ Task Notifier",
  "version": "2.0",
  "description": "神戸大学BEEF+の課題を取得して締切前に通知します。",
  "permissions": [
    "identity",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://beefplus.center.kobe-u.ac.jp/*",
    "https://www.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://beefplus.center.kobe-u.ac.jp/lms/task*"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },

  "icons": {
    "128": "icon.png"
  },

  "oauth2": {
    "client_id": "243468367900-1ipkd77ah2oattrnksens8f4925fq1op.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  },

  "externally_connectable": {
    "matches": ["https://*.chromiumapp.org/*"]
  }
}